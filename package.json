{
  "name": "h53-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "web:dev": "pnpm --filter @h53/web dev",
    "convex:dev": "pnpm --filter @h53/convex dev",
    "cli:dev": "pnpm --filter @h53/cli dev",
    "build": "pnpm -r build",
    "lint": "pnpm biome check .",
    "format": "pnpm biome format --write",
    "test": "pnpm vitest run",
    "test:watch": "pnpm vitest",
    "test:integration": "pnpm playwright test",
    "typecheck": "pnpm -r exec tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@playwright/test": "^1.47.2",
    "@types/node": "^20.12.7",
    "playwright": "^1.47.2",
    "typescript": "^5.6.2",
    "vitest": "^1.6.0"
  }
}
