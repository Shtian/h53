{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["@biomejs/biome/configs/recommended"],
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": ["apps/web/**/*"],
      "extends": [
        "@biomejs/biome/configs/next/recommended",
        "@biomejs/biome/configs/react"
      ]
    }
  ],
  "files": {
    "ignore": ["**/dist/**", "**/.next/**", "**/node_modules/**"]
  }
}
